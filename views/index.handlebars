<div class="container">
  <div class="row header text-left">
    <!-- header -->
    <img class="img-responsive icon" src="./assets/img/burger.png">
    <h1>Eat Burgers!</h1>
    <h2>Welcome</h2>

    <p class="instructions">Click the knife and fork to eat any burger in stock. Click the waiter to order more burgers. Don't see a burger you want to eat? Order your very own one-of-a-kind burger below.</p>
  </div> <!-- header row -->

  <div class="row orderup  text-left">
    <input type="text" class="form-control" id="name" placeholder="My custom burger is called..."><button
      type="submit" id="submit">Order up!</button>
  </div> <!-- survey row -->

  <div class="row">
    <!-- burgers -->
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <!-- left column -->
      <h1 id="left">To Be Eaten...</h1>
      {{#each burgers}}
      {{#unless devoured}}
      <div class="burgerblock">
        <img src="./assets/img/burger.png" class="tinyicon burgericon"><img src="./assets/img/eat.png"
          class="tinyicon eaticon" data-id="{{this.id}}">
        <h2>{{burger_name}}</h2>
      </div>
      {{/unless}}
      {{/each}}
    </div> <!-- left column -->

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <!-- right column -->
      <h1 id="right">Already Devoured!</h1>
      {{#each burgers}}
      {{#if devoured}}
      <div class="burgerblock">
        <img src="./assets/img/burger.png" class="tinyicon burgericon eaten"><img src="./assets/img/waiter.png"
          class="tinyicon waitericon" data-id="{{this.id}}">
        <h2>{{burger_name}}</h2>
      </div>
      {{/if}}
      {{/each}}
    </div> <!-- right column -->
  </div> <!-- burgers row -->

  <div class="row text-left">
    <!-- footer -->
  </div> <!-- footer row -->
</div> <!-- container -->