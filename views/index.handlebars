<h1>Burgers</h1>

<div class="row">
  <container class="card bg-danger mb-3" "col-5">
    <div class="card-header">Burgers you have not eaten.</div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text">
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}</p>
    </div>
  </container>

  <container class="card bg-warning mb-3" "col-5">
    <div class="card-header">Burgers that you have eaten.</div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text"> 
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}</p>
    </div>
  </container>
</div>


<h2>Try A New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Have you eaten this burger before?</label><br>
    <input type="radio" name="eaten" value="1"> Yes
    <input type="radio" name="eaten" value="0" checked> No<br>
  </div>

  <button type="submit">Add the Burger</button>
</form>